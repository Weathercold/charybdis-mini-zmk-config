    macros {
        m_mo_ptr_trans: m_mo_ptr_trans {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&mo 8 &trans>,
                <&macro_pause_for_release>,
                <&macro_release>,
                <&mo 8 &trans>;
        };
    };
};
